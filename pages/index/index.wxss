.slide  {
  white-space: nowrap;
  display: flex;
}

.slide-item {
  width: 120rpx;
  height: 220rpx;
  display: inline-block;
  margin-left: 15px;
}

.slide-item image {
  width: 120rpx;
  height: 120rpx;
}

.title {
  margin: 30rpx;
  font-weight: bold;
  color: #000;
}

.card-name {
  font-size:28rpx;
  display:block;
  text-align:center;
}

.sight-item {
  border-radius: 15rpx;
  margin: 30rpx 15rpx;
  width: 300rpx;
  height: 200rpx;
  display: inline-block;
}

.sight-item view {
  width: 300rpx;
  height: 200rpx;
  border-radius: 5px;
  text-align: center;
  vertical-align: middle;
}